{
    "env": {
        "node": true,
        "browser": false,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": "latest"
    },
    "rules": {
        "no-unused-vars": [
            "warn",
            {
                "vars": "all",
                "args": "all",
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ],
        "indent": [
            "warn",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "never",
            // "always"
        ],
        "no-empty": "off",
        "multiline-comment-style": 1
    }
}